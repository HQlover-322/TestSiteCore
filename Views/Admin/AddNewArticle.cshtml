@{

}
@model List<CategoryViewModel>

<form enctype="multipart/form-data" asp-action="AddNewArticle" asp-controller="Admin"  method="post">
<input class="form-control" name ="Name" type="text" value="Name" required/>
<input class="form-control" name="ShortDescription" type="text" value="ShortDescription" />
<textarea class="md-textarea form-control" name="Description" cols="40" rows="5" required>Description</textarea>
<label>Загрузить изображение</label>
<input class="form-control" type="file" name="HeroImage" />
<input  class="btn btn-success" type="submit" value="Добавить"  />
<br />
<label>Категория</label>
<select class="form-select" name="CategoryId">
    @foreach(var item in Model)
         {  <option value = "@item.Id" >
              @item.Name
           </option>
        }
    </select>
</form>
